{
  "name": "zicket",
  "version": "1.0.0",
  "description": "Frontend training site",
  "scripts": {
    "css": "postcss assets/css/main.css -o dist/css/main.css",
    "js": "uglifyjs ./assets/js/modal.js ./assets/js/swiper@6.8.1.min.js ./assets/js/main.js -o ./dist/js/main.min.js",
    "html": "cp ./index.html ./build/index.html",
    "copyImg": "cp -R ./assets/img ./dist/",
    "copyFonts": "cp -R ./assets/fonts ./dist",
    "deleteDist": "rimraf ./dist",
    "createDist": "npm run deleteDist && mkdir dist && mkdir dist/js && mkdir dist/css && mkdir dist/img",
    "deleteBuild": "rimraf ./build",
    "createBuild": "npm run deleteBuild && mkdir build",
    "copyToBuild": "cp -R ./dist ./build && cp ./index.html ./build/",
    "serve": "http-server -p 3000",
    "watch:css": "watch 'npm run css' ./assets/css",
    "watch:js": "watch 'npm run js' ./assets/js",
    "watch": "parallelshell 'npm run watch:css' 'npm run watch:js'",
    "build": "npm run createDist && parallelshell 'npm run css' 'npm run js' 'npm run copyImg' 'npm run copyFonts' 'npm run createBuild' && npm run copyToBuild",
    "deploy": "git subtree push --prefix build origin gh-pages"
  },
  "author": "James Anwyl",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "parallelshell": "3.0.1",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-minify": "^1.1.0",
    "postcss-variables": "^1.1.1",
    "rimraf": "^3.0.2",
    "uglify-js": "^3.13.10",
    "watch": "^1.0.2"
  }
}
